{
    "app-id": "org.gnome.Fractal.Devel",
    "runtime": "org.gnome.Platform",
    "runtime-version": "master",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable",
        "org.freedesktop.Sdk.Extension.llvm15"
    ],
    "command": "fractal",
    "finish-args": [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--share=network",
        "--share=ipc",
        "--device=dri",
        "--env=RUST_LOG=fractal=debug,warn",
        "--env=G_MESSAGES_DEBUG=none",
        "--env=RUST_BACKTRACE=1"
    ],
    "build-options": {
        "append-ld-library-path": "/usr/lib/sdk/llvm15/lib",
        "append-path": "/usr/lib/sdk/llvm15/bin:/usr/lib/sdk/rust-stable/bin",
        "build-args": [
            "--share=network"
        ],
        "test-args": [
            "--socket=x11",
            "--share=network"
        ]
    },
    "modules": [
        {
            "name": "libshumate",
            "buildsystem": "meson",
            "config-opts": [
                "-Dgir=false",
                "-Dvapi=false",
                "-Dgtk_doc=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libshumate/",
                    "tag": "1.0.3"
                }
            ]
        },
        {
            "name": "fractal",
            "buildsystem": "meson",
            "run-tests": true,
            "config-opts": [
                "-Dprofile=development"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "../"
                }
            ]
        }
    ]
}
